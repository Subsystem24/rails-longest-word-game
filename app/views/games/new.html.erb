<h1 class="new">New Game</h1>
<h1 class="letters"> <% @letters.each do |letter| %>
    <div class="letter"><%=letter%></div>
  <% end %>
</h1>
<p class="challenge">What is the longest word you can find?</p>
<form class="form" action="/score" method="post" data-turbo="false">
  <input type="hidden" name="letters" value="<%= @letters.join(",") %>">
  <input id="input" type="text" name="word">
  <input type="submit" value="Ask!" class="btn btn-dark">
  <input id="tags_list" name="score" type="hidden" value="<%=@score.to_i%>"/>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
